@page "/"
@inject NavigationManager NavigationManager
@inject IStringLocalizer<SharedResources> L
@rendermode InteractiveWebAssembly

<PageTitle>@L["Welcome"]</PageTitle>

<div class="hero-section">
	<div class="hero-background"></div>
	<div class="hero-content">
		<div class="container">
			<h1 class="hero-title">@L["WelcomeTitle"]</h1>
			<p class="hero-subtitle">@L["Subtitle"]</p>
			<button class="hero-button" @onclick="@(() => NavigationManager.NavigateTo("/gameList"))">
				<i class="bi bi-controller me-2"></i> @L["BrowseGames"]
			</button>
		</div>
	</div>
	<div class="hero-wave"></div>	
</div>

<div class="top-games-modern">
	<div class="container">
		<div class="section-header">
			<h2 class="section-title">
				<i class="bi bi-trophy-fill trophy-icon"></i>
				@L["TopRated"]
			</h2>
			<p class="section-subtitle">@L["TopRatedDescription"]</p>
		</div>
		<TopGames />
	</div>
</div>