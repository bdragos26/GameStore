@page "/"
@inject NavigationManager NavigationManager
@rendermode InteractiveWebAssembly

<PageTitle>Welcome to GameStore</PageTitle>

<div class="hero-section">
	<div class="hero-background"></div>
	<div class="hero-content">
		<div class="container">
			<h1 class="hero-title">Welcome to GameStore!</h1>
			<p class="hero-subtitle">Discover and manage your favorite games with ease</p>
			<button class="hero-button" @onclick="@(() => NavigationManager.NavigateTo("/gameList"))">
				<i class="bi bi-controller me-2"></i> Browse All Games
			</button>
		</div>
	</div>
	<div class="hero-wave"></div>	
</div>

<div class="top-games-modern">
	<div class="container">
		<div class="section-header">
			<h2 class="section-title">
				<i class="bi bi-trophy-fill trophy-icon"></i>
				Top Rated Games
			</h2>
			<p class="section-subtitle">Discover the highest rated games in our collection</p>
		</div>
		<TopGames />
	</div>
</div>