@rendermode InteractiveServer

<nav class="navbar bg-body-tertiary" style="background-color: lightgray">
	<div class="container">
		<a class="navbar-brand mb-0 h1" href="/">Game Store</a>
	</div>
	<AuthorizeView>
		<Authorized>
			<div class="d-flex align-items-center">
				<span class="me-2">Hello, @context.User.Identity?.Name!</span>
				<a href="/logout" class="btn btn-outline-danger">Logout</a>
			</div>
		</Authorized>
		<NotAuthorized>
			<div class="d-flex">
				<a href="/login" class="btn btn-outline-primary">Login</a>
				<a href="/register" class="btn btn-primary ms-2">Register</a>
			</div>
		</NotAuthorized>
		<Authorizing>
			<div class="d-flex align-items-center">
				<div class="spinner-border spinner-border-sm text-secondary me-2" role="status"></div>
				<span>Checking auth status...</span>
			</div>
		</Authorizing>
	</AuthorizeView>
</nav>